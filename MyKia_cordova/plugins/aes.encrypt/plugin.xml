<?xml version='1.0' encoding='utf-8'?>
<plugin id="aes.encrypt" version="1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>aesEncrypt</name>
     <engines>
      <engine name="cordova" version=">=3.1.0" /><!-- Needs cordova/urlutil -->
    </engines>
    <platform name="ios">
        <js-module name="aesEncrypt" src="www/aesEncrypt.js">
	        <clobbers target="aesEncrypt" />
	    </js-module>
        <config-file target="config.xml" parent="/*">
            <feature name="aesEncrypt">
                <param name="ios-package" value="aesEncrypt" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/ExRHMEncrypt.h" />
	    <source-file src="src/ios/ExRHMEncrypt.m" />

	    <framework src="CoreGraphics.framework" />
    </platform>
</plugin>
